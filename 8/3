using System;

namespace laba_8_3

{
    class Program
    {
        static void Main(string[] args)
        {
            int n,  x;
            Console.WriteLine("Введите n ");
            n = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("ответ");
            while (n>0)
            {
                x = n % 10;
                Console.WriteLine(x);
                n = (n - x) / 10;
            }
           
        }
    }
}
