using namespace std;
#include <string>
#include <iostream>
#include <windows.h>

int main()
{
	setlocale(LC_ALL, "Russian");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	int l, i, k;
	string s;
	cout << "Введите строку: ";
	getline(cin, s);
	k = 0;
	l = s.size();	
	for (i = 0; i < l; i++)
		s[i] = tolower(s[i]);
	cout << "Новая строки = " <<s;
}
