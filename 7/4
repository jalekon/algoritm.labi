using namespace std;
#include <string>
#include <iostream>
#include <windows.h>

int main()
{
	setlocale(LC_ALL, "Russian");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	int l, i, k, x;
	string s;
	cout << "Введите строку: ";
	getline(cin, s);
	k = 0;
	x= s.size();

	for (i = 0; i < s.size(); i++) {
		s[i] = tolower(s[i]);
		if (s[i] == ' ') {
			s.erase(i, 1);
			k++;
		}
	}
	k = x - k-1;
	for (i = 0; i < k; i++,k--)
		if (s[i] != s[k]) {
			cout << "не перевертыш";
			return 0;
		}
	cout << "перевертыш";
}
