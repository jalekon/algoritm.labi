using namespace std;
#include <iostream> 

int main()
{
	setlocale(LC_ALL, "Russian");
	int n, m, i, j, s;
	cout << "Введите N и M " << endl;
	cin >> n >> m;
	int** a = new int* [n];
	for (i = 0; i < n; i++)
		a[i] = new int[m];
	cout << "Введите массив " << endl;
	for (i = 0; i < n; i++)
		for (j = 0; j < n; j++) 
			cin >> a[i][j];

	for (j = 0; j < n; j++) {
		s = 0;
		for (i = 0; i < n; i++)
			if (a[i][j] > 0)
				s += a[i][j];
		cout << s << " ";
	}
	cout << endl;

	for (j = 0; j < n; j++) {
		s = 0;
		for (i = 0; i < n; i++)
			if (a[i][j] > 0)
				s ++;
		cout << s << " ";
	}
}
