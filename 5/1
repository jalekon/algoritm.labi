using namespace std;
#include <iostream> 

int main()
{
	setlocale(LC_ALL, "Russian");
	int n, i, j, min, max, imin, jmin, imax, jmax;
	cout << "Введите N " << endl;
	cin >> n;
	max = -99999;
	min = 99999;
	int** a = new int* [n];
	for (i = 0; i < n; i++)
		a[i] = new int[n];

	cout << "Введите массив " << endl;
	for (i = 0; i < n; i++)
		for (j = 0; j < n; j++)
			cin >> a[i][j];

	if (a[i][j] < min) {
		min = a[i][j];
		imin = i;
		jmin = j;
	}
	else
		if (a[i][j] > max) {
			max = a[i][j];
			imax = i;
			jmax = j;
		}
	for (i = 0; i < n; i++)
		for (j = 0; j < n; j++)
			cout << a[i][j] << "|";
	cout << endl;
	cout << "min= " << min << " (" << imin << ";" << jmin << ")";
	cout << "max= " << max << " (" << imax << ";" << jmax << ")";
}
