using namespace std;
#include <iostream> 

int main()
{
	setlocale(LC_ALL, "Russian");
	int n, m, i, j, p, s;
	cout << "Введите N и M " << endl;
	cin >> n >> m;
	int** a = new int* [n];
	for (i = 0; i < n; i++)
		a[i] = new int[m];
	cout << "Введите массив " << endl;
	for (i = 0; i < n; i++)
		for (j = 0; j < n; j++) 
			cin >> a[i][j];
	for (i = 0; i < n; i++) {
		p = 1;
		s = 0;
		for (j = 0; j < n; j++) {
			s += a[i][j];
			p *= a[i][j];
		}
		cout << s << " " << p << endl;
	}
}	
